{
  "name": "kermit",
  "version": "0.0.0-development",
  "description": "",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.5.1"
  },
  "bin": {
    "kermit": "bin/kermit.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node bin/kermit.ts",
    "lint": "tslint -t codeFrame 'lib/**/*.ts'",
    "test": "jest --config jest-config.json",
    "test:watch": "jest --config jest-config.json --watchAll",
    "test:coverage": "jest --config jest-config.json --coverage",
    "coverage:report": "node --harmony_proxies node_modules/.bin/jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "prepush": "yarn test && yarn lint",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "check-coverage": true
  },
  "prettier": {
    "semi": false,
    "singleQoute": true
  },
  "repository": "https://github.com/mattmark/kermit.git",
  "author": {
    "email": "matt.vandusen@float-left.co",
    "name": "Matthew Van Dusen"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.43",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^10.10.1",
    "@types/node-emoji": "^1.8.0",
    "@types/ora": "^1.3.4",
    "@types/os-name": "^2.0.0",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^5.0.2",
    "@types/tape": "^4.2.32",
    "coveralls": "^3.0.2",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "mock-fs": "^4.7.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2",
    "rewire": "^4.0.1",
    "sinon": "^6.3.4",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-jest": "^23.10.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/jest": "^23.3.2",
    "chalk": "^2.4.1",
    "commander": "^2.18.0",
    "inquirer": "^6.2.0",
    "node-emoji": "^1.8.1",
    "ora": "^3.0.0",
    "os-name": "^2.0.1",
    "ts-node": "^7.0.1",
    "snyk": "^1.316.1"
  },
  "snyk": true
}
