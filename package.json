{
  "name": "kermit",
  "version": "0.0.0-development",
  "bin": {
    "kermit": "bin/kermit"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'lib/**/*.ts'",
    "test": "ts-node node_modules/tape/bin/tape lib/**/*.test.ts | tap-spec",
    "test:report": "nyc --reporter=lcov yarn test; nyc report ---reporter=text",
    "test:watch": "",
    "test:coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "prepush": "yarn test && yarn build"
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/*.test.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
     ],
    "all": true,
    "check-coverage": true
  },
  "prettier": {
    "semi": false,
    "singleQoute": true
  },
  "repository": "https://github.com/mattmark/kermit.git",
  "author": {
    "email": "matt.vandusen@float-left.co",
    "name": "Matthew Van Dusen"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.43",
    "@types/os-name": "^2.0.0",
    "@types/tape": "^4.2.32",
    "chalk": "^2.4.1",
    "commander": "^2.18.0",
    "coveralls": "^3.0.2",
    "husky": "^0.14.3",
    "inquirer": "^6.2.0",
    "lint-staged": "^7.2.2",
    "nyc": "^13.0.1",
    "os-name": "^2.0.1",
    "prettier": "^1.14.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  }
}
